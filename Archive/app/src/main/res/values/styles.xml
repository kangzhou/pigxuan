<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_red</item>
        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

    </style>
    <style name="WelcomeGuide" parent="Theme.AppCompat.NoActionBar">
        <!-- 隐藏状态栏 -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:actionMenuTextColor">@color/theme_red</item>
        <item name="android:textColorPrimary">@color/theme_red</item>
        <item name="android:textColorSecondary">@color/theme_red</item>
        <item name="actionMenuTextColor">@color/theme_red</item>
    </style>
    <style name="MenuTextStyle">
        <item name="android:textColor">@color/theme_red</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="load_dialog_style" parent="@style/base_dialog_style">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="base_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
